<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.PaymentMethodsFragment">

    <TextView
        android:id="@+id/paymentMethodsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Formas de Pagamento"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/paymentMethodInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nova Forma de Pagamento"
        android:padding="16dp"
        android:background="@drawable/edittext_background"
        app:layout_constraintTop_toBottomOf="@id/paymentMethodsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/addPaymentMethodButton"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/addPaymentMethodButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar"
        android:backgroundTint="@color/primaryColor"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/paymentMethodsTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"/>

    <ListView
        android:id="@+id/paymentMethodsList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:divider="@color/dividerColor"
        android:dividerHeight="1dp"
        app:layout_constraintTop_toBottomOf="@id/paymentMethodInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/taxesTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taxas"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/paymentMethodsList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/taxInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nova Taxa"
        android:padding="16dp"
        android:background="@drawable/edittext_background"
        app:layout_constraintTop_toBottomOf="@id/taxesTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/addTaxButton"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/addTaxButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar"
        android:backgroundTint="@color/primaryColor"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/taxesTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"/>

    <ListView
        android:id="@+id/taxesList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:divider="@color/dividerColor"
        android:dividerHeight="1dp"
        app:layout_constraintTop_toBottomOf="@id/taxInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/discountsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descontos"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/taxesList"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:id="@+id/discountInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Novo Desconto"
        android:padding="16dp"
        android:background="@drawable/edittext_background"
        app:layout_constraintTop_toBottomOf="@id/discountsTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/addDiscountButton"
        android:layout_marginEnd="8dp"/>

    <Button
        android:id="@+id/addDiscountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adicionar"
        android:backgroundTint="@color/primaryColor"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/discountsTitle"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"/>

    <ListView
        android:id="@+id/discountsList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:divider="@color/dividerColor"
        android:dividerHeight="1dp"
        app:layout_constraintTop_toBottomOf="@id/discountInput"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
